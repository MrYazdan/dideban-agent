# Dideban Agent Configuration
# Copy this file to config.yaml and modify as needed

# Agent configuration
agent:
  id: "server-01"            # Unique identifier for this agent (required)
  interval: "30s"            # Collection interval (e.g., 10s, 30s, 1m)

# Core server configuration (required in production)
core:
  endpoint: "https://dideban.example.com/api/metrics"    # Dideban Core endpoint
  token: "your-secret-token-here"                        # Authentication token

# Logger options
log:
  level: "info"              # debug, info, warn, error, fatal, panic
  pretty: true               # console writer ( human-readable )

# Operation mode
mode: "production"  # production | development
